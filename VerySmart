    local apiKey = string.trim(apiKeyBox.Text)
    
    if apiKey == "" then
        statusLabel.Text = "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà API Key ‡∏Å‡πà‡∏≠‡∏ô"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end
    
    -- ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å API Key
    GroqAPI.API_KEY = apiKey
    saveData()
    
    -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÑ‡∏õ‡∏´‡∏ô‡πâ‡∏≤‡πÅ‡∏ä‡∏ó
    apiScreen.Visible = false
    chatScreen.Visible = true
    
    -- ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ï‡πâ‡∏≠‡∏ô‡∏£‡∏±‡∏ö
    clearChat()
end)

apiCloseBtn.MouseButton1Click:Connect(function()
    apiScreen.Visible = false
end)

