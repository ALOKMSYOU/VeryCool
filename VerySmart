    local url = "https://console.groq.com/keys"
    
    local success = pcall(function()
        if setclipboard then
            setclipboard(url)
            statusLabel.Text = "‚úÖ ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡πÅ‡∏•‡πâ‡∏ß!"
            statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        else
            apiKeyBox.Text = url
            statusLabel.Text = "‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ñ‡∏π‡∏Å‡πÉ‡∏™‡πà‡πÉ‡∏ô‡∏ä‡πà‡∏≠‡∏á API Key ‡πÅ‡∏•‡πâ‡∏ß"
            statusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
        end
    end)
    
    if not success then
        statusLabel.Text = "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡πÑ‡∏î‡πâ: " .. url
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
    
    task.wait(3)
    statusLabel.Text = ""
end)

testBtn.MouseButton1Click:Connect(function()
    local apiKey = string.trim(apiKeyBox.Text)
    
    if apiKey == "" then
        statusLabel.Text = "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà API Key ‡∏Å‡πà‡∏≠‡∏ô"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end
    
    testAPIKey(apiKey)
end)

