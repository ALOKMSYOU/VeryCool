historyScroll.ScrollBarImageColor3 = Color3.fromRGB(100, 100, 120)
historyScroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
historyScroll.Parent = historyScreen

local historyLayout = Instance.new("UIListLayout")
historyLayout.Padding = UDim.new(0, 10)
historyLayout.Parent = historyScroll

-- ============================================
-- 7. ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ä‡πà‡∏ß‡∏¢‡πÄ‡∏´‡∏•‡∏∑‡∏≠
-- ============================================

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏ô‡πÅ‡∏ä‡∏ó (‡∏°‡∏∑‡∏≠‡∏ñ‡∏∑‡∏≠)
local function createChatMessage(text, isAI, timestamp)
    local messageFrame = Instance.new("Frame")
    messageFrame.Size = UDim2.new(0.9, 0, 0, 0)
    messageFrame.BackgroundTransparency = 1
    messageFrame.AutomaticSize = Enum.AutomaticSize.Y
    
    local bubble = Instance.new("Frame")
    bubble.BackgroundColor3 = isAI and Color3.fromRGB(50, 60, 90) or Color3.fromRGB(70, 130, 230)
    bubble.Size = UDim2.new(1, 0, 0, 0)
    bubble.AutomaticSize = Enum.AutomaticSize.Y
    bubble.Parent = messageFrame
    
    local bubbleCorner = Instance.new("UICorner")
    bubbleCorner.CornerRadius = UDim.new(0, 15)
    bubbleCorner.Parent = bubble
    
    local padding = Instance.new("UIPadding")
    padding.PaddingLeft = UDim.new(0, 12)
    padding.PaddingRight = UDim.new(0, 12)
    padding.PaddingTop = UDim.new(0, 10)
    padding.PaddingBottom = UDim.new(0, 10)
    padding.Parent = bubble
    
    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 0, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    textLabel.Text = text
    textLabel.Font = Enum.Font.Gotham
    textLabel.TextSize = 14
    textLabel.TextWrapped = true
    textLabel.TextXAlignment = isAI and Enum.TextXAlignment.Left or Enum.TextXAlignment.Left
    textLabel.TextYAlignment = Enum.TextYAlignment.Top
    textLabel.AutomaticSize = Enum.AutomaticSize.Y
    textLabel.Parent = bubble
    
    local senderLabel = Instance.new("TextLabel")
    senderLabel.Size = UDim2.new(1, 0, 0, 20)
    senderLabel.Position = UDim2.new(0, 0, 1, 2)
    senderLabel.BackgroundTransparency = 1
    senderLabel.TextColor3 = isAI and Color3.fromRGB(100, 200, 255) or Color3.fromRGB(150, 220, 150)
    senderLabel.Text = isAI and "ü§ñ AI" or "üë§ ‡∏Ñ‡∏∏‡∏ì"
    senderLabel.Font = Enum.Font.GothamMedium
    senderLabel.TextSize = 12
    senderLabel.TextXAlignment = isAI and Enum.TextXAlignment.Left or Enum.TextXAlignment.Left
    senderLabel.Parent = messageFrame
    
    local timeLabel = Instance.new("TextLabel")
    timeLabel.Size = UDim2.new(1, 0, 0, 15)
    timeLabel.Position = UDim2.new(0, 0, 1, 18)
    timeLabel.BackgroundTransparency = 1
    timeLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    timeLabel.Text = timestamp or os.date("%H:%M")
    timeLabel.Font = Enum.Font.Gotham
    timeLabel.TextSize = 10
    timeLabel.TextXAlignment = isAI and Enum.TextXAlignment.Left or Enum.TextXAlignment.Left
    timeLabel.Parent = messageFrame
    
    return messageFrame
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏≠‡πÄ‡∏ó‡∏°‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥
local function createHistoryItem(question, timestamp, index)
    local historyItem = Instance.new("TextButton")
    historyItem.Size = UDim2.new(1, -20, 0, 80)
    historyItem.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
    historyItem.Text = ""
    historyItem.AutoButtonColor = false
    historyItem.Parent = historyScroll
    
    local itemCorner = Instance.new("UICorner")
    itemCorner.CornerRadius = UDim.new(0, 10)
    itemCorner.Parent = historyItem
    
    local previewText = Instance.new("TextLabel")
    previewText.Size = UDim2.new(1, -60, 0.7, 0)
    previewText.Position = UDim2.new(0, 10, 0, 5)
    previewText.BackgroundTransparency = 1
    previewText.TextColor3 = Color3.fromRGB(220, 220, 220)
    previewText.Text = string.sub(question, 1, 40) .. (string.len(question) > 40 and "..." or "")
    previewText.Font = Enum.Font.Gotham
    previewText.TextSize = 14
    previewText.TextWrapped = true
    previewText.TextXAlignment = Enum.TextXAlignment.Left
    previewText.Parent = historyItem
    
    local timeText = Instance.new("TextLabel")
    timeText.Size = UDim2.new(1, -60, 0.3, 0)
    timeText.Position = UDim2.new(0, 10, 0.7, 0)
    timeText.BackgroundTransparency = 1
    timeText.TextColor3 = Color3.fromRGB(150, 150, 180)
    timeText.Text = timestamp
    timeText.Font = Enum.Font.Gotham
    timeText.TextSize = 12
    timeText.TextXAlignment = Enum.TextXAlignment.Left
    timeText.Parent = historyItem
    
    local deleteBtn = Instance.new("TextButton")
    deleteBtn.Size = UDim2.new(0, 40, 0, 40)
    deleteBtn.Position = UDim2.new(1, -45, 0.5, -20)
    deleteBtn.AnchorPoint = Vector2.new(0, 0.5)
    deleteBtn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
    deleteBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    deleteBtn.Text = "√ó"
    deleteBtn.Font = Enum.Font.GothamBold
    deleteBtn.TextSize = 18
    deleteBtn.Visible = false
    deleteBtn.Parent = historyItem
    
    local deleteCorner = Instance.new("UICorner")
    deleteCorner.CornerRadius = UDim.new(1, 0)
    deleteCorner.Parent = deleteBtn
    
    historyItem.MouseEnter:Connect(function()
        historyItem.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
        deleteBtn.Visible = true
    end)
    
    historyItem.MouseLeave:Connect(function()
        historyItem.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
        deleteBtn.Visible = false
    end)
    
    historyItem.MouseButton1Click:Connect(function()
        -- ‡πÇ‡∏´‡∏•‡∏î‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥
        loadChatHistory(index)
        historyScreen.Visible = false
        chatScreen.Visible = true
    end)
    
    deleteBtn.MouseButton1Click:Connect(function()
        table.remove(GroqAPI.HISTORY, index)
        saveData()
        updateHistoryList()
    end)
    
    return historyItem
end

-- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó‡∏•‡∏¥‡∏™‡∏ï‡πå‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥
local function updateHistoryList()
    for _, child in ipairs(historyScroll:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    for i, history in ipairs(GroqAPI.HISTORY) do
        createHistoryItem(history.question, history.timestamp, i)
    end
end

-- ‡πÇ‡∏´‡∏•‡∏î‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥‡πÅ‡∏ä‡∏ó
local function loadChatHistory(index)
    for _, child in ipairs(chatArea:GetChildren()) do
        if child:IsA("Frame") then
            child:Destroy()
        end
    end
    
    if GroqAPI.HISTORY[index] then
        local history = GroqAPI.HISTORY[index]
        
        -- ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
        local userMsg = createChatMessage(history.question, false, history.timestamp)
        userMsg.Parent = chatArea
        
        -- ‡πÅ‡∏™‡∏î‡∏á‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö AI
        local aiMsg = createChatMessage(history.answer, true, history.timestamp)
        aiMsg.Parent = chatArea
    end
end

-- ‡∏ó‡∏î‡∏™‡∏≠‡∏ö API Key
local function testAPIKey(apiKey)
    statusLabel.Text = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ó‡∏î‡∏™‡∏≠‡∏ö API Key..."
    statusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
    
    local success, response = pcall(function()
        local url = "https://api.groq.com/openai/v1/models"
        return HttpService:GetAsync(url, true, {
            ["Authorization"] = "Bearer " .. apiKey
        })
    end)
    
    if success then
        statusLabel.Text = "‚úÖ API Key ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡πÑ‡∏î‡πâ!"
        statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        startBtn.Visible = true
        return true
    else
        statusLabel.Text = "‚ùå API Key ‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        startBtn.Visible = false
        return false
    end
end

-- ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡πÉ‡∏ä‡πâ Groq API
local function callGroqAPI(question)
    if not GroqAPI.API_KEY or GroqAPI.API_KEY == "" then
        return "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà API Key ‡∏Å‡πà‡∏≠‡∏ô‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô"
    end
    
    -- ‡πÅ‡∏™‡∏î‡∏á‡∏ï‡∏±‡∏ß‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏û‡∏¥‡∏°‡∏û‡πå
    typingIndicator.Visible = true
    local dotCount = 0
    local dotsConnection = RunService.Heartbeat:Connect(function()
        dotCount = (dotCount % 3) + 1
        dotsLabel.Text = string.rep(".", dotCount)
    end)
    
    local success, response = pcall(function()
        local url = "https://api.groq.com/openai/v1/chat/completions"
        
        local headers = {
            ["Content-Type"] = "application/json",
            ["Authorization"] = "Bearer " .. GroqAPI.API_KEY
        }
        
        local body = {
            model = GroqAPI.SETTINGS.model,
            messages = {
                {
                    role = "user",
                    content = question
                }
            },
            max_tokens = GroqAPI.SETTINGS.max_tokens,
            temperature = GroqAPI.SETTINGS.temperature
        }
        
        return HttpService:PostAsync(
            url,
            HttpService:JSONEncode(body),
            Enum.HttpContentType.ApplicationJson,
            false,
            headers
        )
    end)
    
    dotsConnection:Disconnect()
    typingIndicator.Visible = false
    
    if success then
        local decoded = HttpService:JSONDecode(response)
        if decoded and decoded.choices and #decoded.choices > 0 then
            return decoded.choices[1].message.content
        else
            return "‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏à‡∏≤‡∏Å API"
        end
    else
        return "API Error: " .. response
    end
end

-- ‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°
local function sendMessage()
    local question = inputBox.Text
    if string.trim(question) == "" then
        return
    end
    
    -- ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
    local timestamp = os.date("%H:%M")
    local userMsg = createChatMessage(question, false, timestamp)
    userMsg.Parent = chatArea
    
    -- ‡∏•‡πâ‡∏≤‡∏á input
    inputBox.Text = ""
    
    -- ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å API
    task.spawn(function()
        local answer = callGroqAPI(question)
        
        -- ‡πÅ‡∏™‡∏î‡∏á‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö AI
        local aiMsg = createChatMessage(answer, true, timestamp)
        aiMsg.Parent = chatArea
        
        -- ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥
        table.insert(GroqAPI.HISTORY, {
            question = question,
            answer = answer,
            timestamp = timestamp,
            date = os.date("%Y-%m-%d")
        })
        
        saveData()
        
        -- ‡πÄ‡∏•‡∏∑‡πà‡∏≠‡∏ô‡∏•‡∏á‡∏•‡πà‡∏≤‡∏á
        task.wait(0.1)
        chatArea.CanvasPosition = Vector2.new(0, chatArea.CanvasSize.Y.Offset)
    end)
end

-- ‡∏•‡πâ‡∏≤‡∏á‡πÅ‡∏ä‡∏ó
local function clearChat()
    for _, child in ipairs(chatArea:GetChildren()) do
        if child:IsA("Frame") then
            child:Destroy()
        end
    end
    
    -- ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
    local welcomeMsg = createChatMessage("‡∏™‡∏ß‡∏±‡∏™‡∏î‡∏µ‡∏Ñ‡∏£‡∏±‡∏ö! ‡∏ú‡∏°‡∏Ñ‡∏∑‡∏≠ Groq AI Assistant\n‡∏Ñ‡∏∏‡∏ì‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ñ‡∏≤‡∏°‡∏≠‡∏∞‡πÑ‡∏£‡∏Å‡πá‡πÑ‡∏î‡πâ‡∏Ñ‡∏£‡∏±‡∏ö", true, os.date("%H:%M"))
    welcomeMsg.Parent = chatArea
end

